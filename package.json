{
  "name": "task-manager-app",
  "version": "1.0.0",
  "description": "Collaborative task management application built with modern technologies",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:web": "npm run dev --workspace=packages/web",
    "dev:api": "npm run dev --workspace=packages/api",
    "build": "npm run build --workspaces --if-present",
    "build:web": "npm run build --workspace=packages/web",
    "build:api": "npm run build --workspace=packages/api",
    "test": "npm run test --workspaces --if-present",
    "test:web": "npm run test --workspace=packages/web",
    "test:api": "npm run test --workspace=packages/api",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "type-check": "tsc --build --verbose",
    "type-check:watch": "tsc --build --watch",
    "type-check:clean": "tsc --build --clean",
    "clean": "npm run clean --workspaces --if-present && rimraf node_modules",
    "db:test": "node scripts/test-db-connection.js",
    "docker:build": "docker-compose -f docker/docker-compose.yml build",
    "docker:up": "docker-compose -f docker/docker-compose.yml up",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:postgres": "docker-compose -f docker/docker-compose.yml up postgres -d",
    "docker:dev": "./scripts/docker/dev.sh",
    "docker:prod": "./scripts/docker/prod.sh",
    "docker:dev-up": "./scripts/docker/dev.sh up",
    "docker:dev-down": "./scripts/docker/dev.sh down",
    "docker:prod-up": "./scripts/docker/prod.sh up",
    "docker:prod-down": "./scripts/docker/prod.sh down"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "pg": "^8.11.3",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2"
  }
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "task-manager",
    "collaboration",
    "monorepo",
    "typescript",
    "react",
    "express"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AtomikBioHazard/task-manager-app.git"
  },
  "author": "Task Manager Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AtomikBioHazard/task-manager-app/issues"
  },
  "homepage": "https://github.com/AtomikBioHazard/task-manager-app#readme"
}