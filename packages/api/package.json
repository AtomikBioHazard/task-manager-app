{
  "name": "@task-manager/api",
  "version": "1.0.0",
  "description": "Express API server for task manager application",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rimraf dist",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "migrate": "tsx src/database/scripts/migrate.ts",
    "migrate:rollback": "tsx src/database/scripts/migrate.ts rollback",
    "migrate:status": "tsx src/database/scripts/migrate.ts status",
    "migrate:reset": "tsx src/database/scripts/migrate.ts reset"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "pg": "^8.11.3",
    "@task-manager/shared": "*"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/pg": "^8.10.9",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.0",
    "tsx": "^4.7.0",
    "vitest": "^1.2.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "imports": {
    "#controllers/*": "./src/controllers/*",
    "#routes/*": "./src/routes/*",
    "#middleware/*": "./src/middleware/*",
    "#repositories/*": "./src/repositories/*",
    "#utils/*": "./src/utils/*",
    "#models/*": "./src/models/*",
    "#config/*": "./src/config/*",
    "#database/*": "./src/database/*"
  }
}